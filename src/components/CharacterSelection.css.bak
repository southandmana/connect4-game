.character-selection {
  min-height: 100vh;
  padding: 20px;
  display: flex;
  flex-direction: column;
  font-family: 'Fredoka', 'Comic Sans MS', 'Marker Felt', 'Bradley Hand', cursive, sans-serif;
  background: #4d0000; /* Solid color instead of gradient */
  position: relative;
  overflow: hidden;
}

/* Background effects */
/* Removed heavy background effects for performance */

.character-selection > * {
  position: relative;
  z-index: 2;
}

.character-selection-header {
  text-align: center;
  margin-bottom: 30px;
}

.selection-title {
  font-size: 3.5rem;
  color: #ffd700;
  text-shadow: 
    0 0 20px #ff4500,
    0 0 40px #ff4500,
    4px 4px 0px #660000,
    6px 6px 0px #330000;
  margin-bottom: 10px;
  /* Static title glow for performance */
  text-shadow: 0 0 25px #ff4500, 0 0 50px #ff6b35, 4px 4px 0px #660000, 6px 6px 0px #330000;
}

@keyframes titleGlow {
  0% { 
    text-shadow: 
      0 0 20px #ff4500,
      0 0 40px #ff4500,
      4px 4px 0px #660000,
      6px 6px 0px #330000;
  }
  100% { 
    text-shadow: 
      0 0 30px #ffd700,
      0 0 60px #ff6b35,
      4px 4px 0px #660000,
      6px 6px 0px #330000;
  }
}

.selection-subtitle {
  font-size: 1.3rem;
  color: #ffccaa;
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8);
  margin: 0;
}

/* Fighting Game Layout */
.fighter-selection-layout {
  display: flex;
  gap: 40px;
  max-width: 1200px;
  width: 100%;
  margin: 0 auto;
  flex: 1;
}

/* Character Grid (Left Side) */
.character-grid-container {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: flex-start;
}

.character-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 12px;
  padding: 20px;
  background: rgba(0, 0, 0, 0.7); /* Solid color instead of gradient */
  border: 3px solid #ff6b35;
  border-radius: 15px;
}

.character-portrait {
  width: 80px;
  height: 80px;
  border: 3px solid #ff4500;
  border-radius: 8px;
  cursor: pointer;
  transition: all 0.2s ease;
  position: relative;
  overflow: hidden;
  background: linear-gradient(145deg, #2d0000 0%, #1a0000 100%);
}

.character-portrait:hover {
  border-color: #ff6b35;
  transform: scale(1.1);
  /* Flat design - no glow shadow */
}

.character-portrait.selected {
  border-color: #ffd700;
  background: #4d0000; /* Flat selected background */
  /* Flat design - no glow shadows */
  /* Static selected state for performance */
  transform: scale(1.1);
}

@keyframes selectedPortrait {
  0%, 100% { transform: scale(1.1); }
  50% { transform: scale(1.15); }
}

.portrait-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.2s ease;
}

.character-portrait:hover .portrait-image {
  transform: scale(1.05);
}

.selection-indicator {
  position: absolute;
  top: -5px;
  right: -5px;
  background: #ffd700;
  color: #000;
  width: 20px;
  height: 20px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  font-size: 0.8rem;
  border: 2px solid #ff4500;
  animation: checkmark 0.3s ease-out;
}

@keyframes checkmark {
  0% { transform: scale(0) rotate(-180deg); }
  100% { transform: scale(1) rotate(0deg); }
}

/* Character Preview (Right Side) */
.character-preview {
  flex: 1;
  background: rgba(77, 0, 0, 0.8); /* Flat solid color */
  border: 3px solid #ff6b35;
  border-radius: 15px;
  padding: 30px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.preview-content {
  text-align: center;
  width: 100%;
}

.preview-image-container {
  margin-bottom: 20px;
  position: relative;
}

.preview-image {
  width: 200px;
  height: 200px;
  border-radius: 50%;
  border: 4px solid #ffd700;
  object-fit: cover;
  box-shadow: 
    0 0 30px rgba(255, 215, 0, 0.8),
    0 0 60px rgba(255, 69, 0, 0.4);
  /* Static preview glow for performance */
  box-shadow: 0 0 35px rgba(255, 215, 0, 0.8), 0 0 70px rgba(255, 69, 0, 0.5);
}

@keyframes previewGlow {
  0% { 
    box-shadow: 
      0 0 30px rgba(255, 215, 0, 0.6),
      0 0 60px rgba(255, 69, 0, 0.3);
  }
  100% { 
    box-shadow: 
      0 0 40px rgba(255, 215, 0, 1),
      0 0 80px rgba(255, 69, 0, 0.6);
  }
}

.preview-details {
  color: white;
}

.preview-name {
  font-size: 2.5rem;
  color: #ffd700;
  margin: 0 0 5px 0;
  text-shadow: 
    0 0 15px #ff4500,
    3px 3px 0px #660000;
  /* Static name glow for performance */
  color: #ffff00;
}

@keyframes nameGlow {
  0% { color: #ffd700; }
  100% { color: #ffff00; }
}

.preview-title {
  font-size: 1.4rem;
  color: #ff6b35;
  margin: 0 0 15px 0;
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8);
  font-style: italic;
}

.preview-description {
  font-size: 1.1rem;
  color: #ffccaa;
  line-height: 1.4;
  margin: 0 0 20px 0;
  text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.8);
}

/* Fighter Stats */
.fighter-stats {
  display: flex;
  flex-direction: column;
  gap: 8px;
  margin-top: 20px;
}

.stat-bar {
  display: flex;
  align-items: center;
  gap: 15px;
}

.stat-label {
  font-weight: bold;
  color: #ff6b35;
  min-width: 80px;
  text-align: left;
  font-size: 1rem;
  text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.8);
}

.stat-fill {
  height: 8px;
  background: linear-gradient(90deg, #ff4500 0%, #ffd700 100%);
  border-radius: 4px;
  flex: 1;
  position: relative;
  box-shadow: 
    0 0 10px rgba(255, 69, 0, 0.6),
    inset 0 1px 0 rgba(255, 215, 0, 0.3);
  animation: statFill 0.5s ease-out;
}

@keyframes statFill {
  0% { width: 0%; }
  100% { width: 100%; }
}

/* Placeholder */
.preview-placeholder {
  color: #888;
  text-align: center;
}

.placeholder-icon {
  font-size: 4rem;
  margin-bottom: 10px;
  opacity: 0.5;
}

.preview-placeholder p {
  font-size: 1.2rem;
  margin: 0;
}

/* Controls */
.selection-controls {
  display: flex;
  justify-content: center;
  gap: 40px;
  margin-top: 30px;
}

.selection-button {
  padding: 15px 40px;
  font-size: 1.3rem;
  font-weight: bold;
  font-family: 'Fredoka', 'Comic Sans MS', 'Marker Felt', 'Bradley Hand', cursive, sans-serif;
  color: white;
  border: 3px solid #ff6b35;
  border-radius: 25px;
  cursor: pointer;
  transition: all 0.3s;
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8);
  min-width: 200px;
  position: relative;
  overflow: hidden;
}

.selection-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s;
}

.selection-button:hover::before {
  left: 100%;
}

.back-button {
  background: #4d0000; /* Flat back button */
}

.confirm-button {
  background: #ff4500; /* Flat confirm button */
}

.confirm-button.disabled {
  opacity: 0.5;
  cursor: not-allowed;
  background: linear-gradient(145deg, #666 0%, #333 50%, #111 100%);
  border-color: #666;
  box-shadow: none;
}

.selection-button:hover:not(.disabled) {
  transform: translateY(-3px) scale(1.05);
  box-shadow: 
    0 8px 25px rgba(255, 69, 0, 0.6),
    inset 0 2px 0 rgba(255, 140, 0, 0.3);
}

.selection-button:active:not(.disabled) {
  transform: translateY(-1px) scale(1.02);
}

/* Responsive Design */
@media (max-width: 1024px) {
  .fighter-selection-layout {
    flex-direction: column;
    gap: 30px;
  }
  
  .character-grid {
    max-width: 400px;
    margin: 0 auto;
  }
  
  .character-preview {
    min-height: 300px;
  }
  
  .preview-image {
    width: 150px;
    height: 150px;
  }
  
  .preview-name {
    font-size: 2rem;
  }
}

@media (max-width: 768px) {
  .character-selection {
    padding: 15px;
  }
  
  .selection-title {
    font-size: 2.5rem;
  }
  
  .character-grid {
    grid-template-columns: repeat(3, 1fr);
    gap: 10px;
    padding: 15px;
  }
  
  .character-portrait {
    width: 70px;
    height: 70px;
  }
  
  .preview-image {
    width: 120px;
    height: 120px;
  }
  
  .preview-name {
    font-size: 1.8rem;
  }
  
  .preview-title {
    font-size: 1.2rem;
  }
  
  .preview-description {
    font-size: 1rem;
  }
  
  .selection-controls {
    flex-direction: column;
    gap: 15px;
    align-items: center;
  }
  
  .selection-button {
    padding: 12px 30px;
    font-size: 1.1rem;
    min-width: 180px;
  }
}

@media (max-width: 480px) {
  .selection-title {
    font-size: 2rem;
  }
  
  .character-grid {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .character-portrait {
    width: 60px;
    height: 60px;
  }
  
  .fighter-selection-layout {
    gap: 20px;
  }
  
  .character-preview {
    padding: 20px;
  }
  
  .preview-image {
    width: 100px;
    height: 100px;
  }
  
  .preview-name {
    font-size: 1.5rem;
  }
  
  .stat-label {
    min-width: 60px;
    font-size: 0.9rem;
  }
}